<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DrinksActivity"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            android:contentDescription="TODO"
            android:src="@drawable/drink" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
            <Button
                android:layout_column="0"
                android:id="@+id/waterPlus"
                android:onClick="incrementWater"
                android:layout_row="0"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/water"/>
            <Button
                android:layout_column="1"
                android:id="@+id/water"
                android:layout_row="0"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="0"
                android:id="@+id/waterMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementWater"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/sparklingWaterPlus"
                android:onClick="incrementSparklingWater"
                android:layout_row="1"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/sparklingWater"/>
            <Button
                android:layout_column="1"
                android:id="@+id/sparklingWater"
                android:layout_row="1"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="1"
                android:id="@+id/sparklingWaterMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementSparklingWater"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/fizzyDrinkPlus"
                android:onClick="incrementFizzyDrink"
                android:layout_row="2"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/fizzyDrink"/>
            <Button
                android:layout_column="1"
                android:id="@+id/fizzyDrink"
                android:layout_row="2"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="2"
                android:id="@+id/fizzyDrinkMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementFizzyDrink"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/colaPlus"
                android:onClick="incrementCola"
                android:layout_row="3"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/cola"/>
            <Button
                android:layout_column="1"
                android:id="@+id/cola"
                android:layout_row="3"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="3"
                android:id="@+id/colaMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementCola"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/juicePlus"
                android:onClick="incrementJuice"
                android:layout_row="4"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/juice"/>
            <Button
                android:layout_column="1"
                android:id="@+id/juice"
                android:layout_row="4"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="4"
                android:id="@+id/juiceMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementJuice"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/beerPlus"
                android:onClick="incrementBeer"
                android:layout_row="5"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/beer"/>
            <Button
                android:layout_column="1"
                android:id="@+id/beer"
                android:layout_row="5"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="5"
                android:id="@+id/beerMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementBeer"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_column="0"
                android:id="@+id/vodkaPlus"
                android:onClick="incrementVodka"
                android:layout_row="6"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="3"
                android:text="@string/vodka"/>
            <Button
                android:layout_column="1"
                android:id="@+id/vodka"
                android:layout_row="6"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:text="@string/zero"/>
            <Button
                android:layout_row="6"
                android:id="@+id/vodkaMinus"
                android:layout_column="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:onClick="decrementVodka"
                android:layout_columnWeight="1"/>
        </GridLayout>
        <Button
            android:id="@+id/infoSendDrinks"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/toSend"/>
    </LinearLayout>
</ScrollView>